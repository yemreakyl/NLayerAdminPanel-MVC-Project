@model IEnumerable<BLL.Dtos.ProductDto>

@{
    ViewBag.Title = "Ürün Listesi";
}
<div class="card my-2">
    <div class="card-header">
        @Html.ActionLink("Create New", "CreateOrEdit", "Urun", new { }, new { @class = "btn btn-sm btn-outline-primary float-end" })
        <h2>@ViewBag.Title</h2>


    </div>
    <div class="card-body p-0">
        <table class="table table-striped table-hover p-0 m-0">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Subcategory)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th class="w-auto"></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subcategory)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category)
                    </td>
                    <td>
                        @item.CreateDate.ToString("dd MMMM yyyy dddd HH:mm:ss")
                    </td>
                    <td class="w-auto">
                        <div class="btn-group float-end" role="group" aria-label="Basic example">
                            @if (item.Active)
                            {
                                <a href="/urun/activate/@item.Id" type="button" class="btn btn-success" title="Passive">
                                    <i class="fa-solid fa-check"></i>
                                </a>
                            }
                            else
                            {
                                <a href="/urun/activate/@item.Id" type="button" class="btn btn-secondary" title="Active">
                                    <i class="fa-solid fa-xmark"></i>
                                </a>
                            }
                            @if (item.Deleted)
                            {
                                <a href="/urun/delete/@item.Id" type="button" class="btn btn-danger" title="Undo">
                                    <i class="fa-solid fa-recycle"></i>
                                </a>
                            }
                            else
                            {
                                <a href="/urun/delete/@item.Id" type="button" class="btn btn-info" title="Delete">
                                    <i class="fa-solid fa-trash-can"></i>
                                </a>
                            }
                            <a href="/urun/createoredit/@item.Id" type="button" class="btn btn-warning" title="Edit">
                                <i class="fa-solid fa-pen-to-square"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>